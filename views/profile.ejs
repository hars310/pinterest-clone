<% include ./partials/header.ejs %>

<div class="profile w-full min-h-screen bg-zinc-700 text-white pt-1  " >
    <form hidden id="uploadform" action="/fileupload" method="post" enctype="multipart/form-data">
        <input type="file" name="image" id="">
    </form>
    <div class="profile-details mt-4  flex flex-col items-center  text-center">
        <div class="relative">
            <span id="uploadicon" class="w-10 h-10 absolute bottom-0 right-0 rounded-full flex items-center justify-center bg-zinc-200 ">
                <i class="text-zinc-800 cursor-pointer ri-pencil-fill"></i>
            </span>
            <div class="w-32 h-32 bg-zinc-200 rounded-full overflow-hidden">
                <img class="w-full h-full object-cover " src="/images/uploads/<%= user.profileImage %>" alt="" />
            </div>
        </div>
        <h1 class="text-2xl font-semibold "><%= user.name %></h1>
        <h3 class="text-md ">@<%= user.username %></h3>
        <a href="/edit" class="mt-2 px-5 py-2 bg-zinc-700 rounded-full bg-zinc-900 text-sm font-semibold">Edit</a>
        <a href="/add" class="px-4 py-2 rounded-md bg-red-700 text-xs font-semibold mt-2 ">Add New Post</a>
    </div>
    <div class="cards flex flex-wrap  gap-12 px-24 py-8  mt-8 ">
     
        <% if(user.posts.length>0){%>
        <div class="card">
            <div class="w-40 h-48 bg-zinc-200 rounded-md overflow-hidden ">
                <img class="w-full h-full object-cover " src="/images/uploads/<%=user.posts[0].image%>" alt="">
            </div>
            <a href="/show-all" class="text-xl font-semibold mt-2">My Uploaded Posts</a>
            <h5 class="text-sm font-medium opacity-60"><%= user.posts.length %> Pins</h5>
            </div>
        <% } %>

    
    </div>
</div>
<script>
  document.querySelector('#uploadicon').addEventListener('click', function(){
        document.querySelector('#uploadform input ').click();
  })
  document.querySelector("#uploadform input").addEventListener('change',function(){
    document.querySelector("#uploadform").submit();
  })
</script>

<% include ./partials/footer.ejs %>