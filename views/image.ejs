<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-800 p-4 text-white ">
    <div class="flex gap-10 mt-8">
        <div class="w-2/3 h-3/5 bg-sky-200 rounded-lg overflow-hidden">
            <img class=" object-cover h-full w-full" src="/images/uploads/<%= post.image %>" alt="<%= post.title %>">
        </div>
        <div class="w-1/3 h-full bg-white opacity-90 text-black px-8 py-4 rounded-lg  mr-8">
            <!-- <div class="w-32 h-32 bg-zinc-200 rounded-full overflow-hidden mb-4">
                <img class="w-full h-full object-cover" src="/images/uploads/<%= post.user.profileImage %>" alt="Profile Image" />
            </div> -->
            <h2 class="mt-2 px-2 font-semibold  text-lg">@<%= post.user.username %></h2> <br>
            <p class="mt-2 px-2"><strong class="text-red-700">Date - </strong> <%= post.uploadDate.toDateString().split(' ')[1] %> <%= post.uploadDate.getFullYear()  %></p>
            <h5 class="mt-2 px-2 "><strong class="text-red-700">Title - </strong><%= post.title %></h5>
            <p class="mt-2 px-2  "><strong class="text-red-700">Description - </strong> <%= post.description %> </p>
            <div class="mt-8  ">
                <a href="/images/uploads/<%= post.image %>" download class="bg-red-700 text-white  px-4 py-2 rounded hover:bg-red-800 transition duration-300 ease-in-out">
                    Download
                </a>
            </div>
        </div>
        
        
    </div>
</div>




