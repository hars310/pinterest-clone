<% include ./partials/header.ejs %>

<div class="p-3 bg-zinc-700 pb-10">
    <div class="w-1/3 mx-auto bg-white rounded p-6 shadow-md">
        <h1 class="text-2xl font-semibold mb-2">Edit Profile</h1>

        <form action="/edit" method="POST" class="space-y-4">
            
            <!-- Display existing data and allow editing -->
            <div>
                <label for="name" class="block text-gray-700 text-sm font-bold mb-2">Name</label>
                <input type="text" id="name" name="name" value="<%= user.name %>" placeholder="Enter your name" class="w-full px-4 py-2 border rounded focus:outline-none focus:border-blue-500">
            </div>

            <div>
                <label for="username" class="block text-gray-700 text-sm font-bold mb-2">Username</label>
                <input type="text" id="username" name="username" value="<%= user.username %>" placeholder="Enter username" class="w-full px-4 py-2 border rounded focus:outline-none focus:border-blue-500">
            </div>

            <div>
                <label for="email" class="block text-gray-700 text-sm font-bold mb-2">Email</label>
                <input type="email" id="email" name="email" value="<%= user.email %>" placeholder="Enter email" class="w-full px-4 py-2 border rounded focus:outline-none focus:border-blue-500">
            </div>

            <div>
                <label for="contact" class="block text-gray-700 text-sm font-bold mb-2">Contact</label>
                <input type="tel" id="contact" name="contact" value="<%= user.contact %>" placeholder="Enter contact number" class="w-full px-4 py-2 border rounded focus:outline-none focus:border-blue-500">
            </div>


            <button type="submit" class="bg-red-700 text-white px-4 py-2 rounded hover:bg-red-800 focus:outline-none focus:shadow-outline-blue">
                Save Changes
            </button>
        </form>
    </div>
</div>

<% include ./partials/footer.ejs %>
